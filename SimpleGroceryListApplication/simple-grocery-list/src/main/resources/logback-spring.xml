<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="false">
    <springProfile name="local">
        <property name="app.name" value="SimpleGroceryList"/>
        <property name="log.pattern" value="%d{yyyy-MM-dd'T'HH:mm:ss.SSSZ} ${LOG_LEVEL_PATTERN:-%5p} [${app.name}][%X{endpointPath}] %m%n"/>

        <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
            <encoder>
                <charset>UTF-8</charset>
                <pattern>${log.pattern}</pattern>
            </encoder>
        </appender>

        <logger name="org.springframework" level="INFO"/>
        <logger name="com.clearcaptions.common" level="INFO"/>
        <logger name="com.clearcaptions.simplegrocerylist" level="DEBUG"/>

        <root level="INFO">
            <appender-ref ref="STDOUT"/>
        </root>
    </springProfile>
</configuration>